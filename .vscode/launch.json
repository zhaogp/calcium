{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "calcium-debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/bin/calcium",
        "args": [
            "-std=c++17",
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/bin",
        "environment": [],
        "externalConsole": true,  // 打开系统终端作为调试窗口
        "MIMode": "lldb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for lldb",
                "text": "settings set target.prefer-binary false",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "calcium-build"
    }
    ]
}
